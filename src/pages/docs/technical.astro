
---
import Layout from '../../layouts/Layout.astro';
import { getEntryBySlug } from 'astro:content';

let Content;
const entry = await getEntryBySlug('technical', 'api_architecture');
if (entry) {
  ({ Content } = await entry.render());
}
---

<Layout title="Technical Documentation" description="Technical implementation, API architecture, CI/CD, and technology stack.">
  <section class="docs-content">
    {Content ? <Content /> : <p>Documentation not found.</p>}
  </section>
</Layout>
