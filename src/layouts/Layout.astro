---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Entitle - Externalize Entitlement Logic for Your SaaS' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav>
      <div class="container">
        <a href="/" class="logo">Entitle</a>
        <ul>
          <li><a href="/">Product</a></li>
          <li><a href="/docs">Docs</a></li>
          <li><a href="/security">Security</a></li>
          <li><a href="/alpha" class="cta">Request Alpha Access</a></li>
        </ul>
      </div>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <div class="container">
        <p>&copy; {new Date().getFullYear()} Entitle. Policy decisions for modern SaaS.</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #3b82f6;
    --color-primary-dark: #2563eb;
    --color-primary-light: #60a5fa;
    --color-accent: #8b5cf6;
    --color-success: #10b981;
    --color-warning: #f59e0b;
    --color-text: #0f172a;
    --color-text-secondary: #475569;
    --color-text-muted: #64748b;
    --color-bg: #ffffff;
    --color-bg-secondary: #f8fafc;
    --color-border: #e2e8f0;
    --color-border-light: #f1f5f9;
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    --radius-sm: 6px;
    --radius-md: 8px;
    --radius-lg: 12px;
    --radius-xl: 16px;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.7;
    color: var(--color-text);
    background: var(--color-bg);
    font-size: 16px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    position: relative;
  }

  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(at 20% 30%, rgba(59, 130, 246, 0.08) 0px, transparent 50%),
      radial-gradient(at 80% 60%, rgba(139, 92, 246, 0.08) 0px, transparent 50%),
      radial-gradient(at 50% 90%, rgba(16, 185, 129, 0.06) 0px, transparent 50%);
    background-size: 100% 100%;
    pointer-events: none;
    z-index: -1;
  }

  body::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%239C92AC' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.5;
    pointer-events: none;
    z-index: -1;
  }

  h1, h2, h3, h4, h5, h6 {
    line-height: 1.2;
    font-weight: 700;
    color: var(--color-text);
    letter-spacing: -0.02em;
  }

  h1 {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    font-weight: 800;
  }

  h2 {
    font-size: 2.5rem;
    margin-bottom: 1.25rem;
    font-weight: 700;
  }

  h3 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  h4 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  p {
    margin-bottom: 1.25rem;
    color: var(--color-text-secondary);
  }

  a {
    color: var(--color-primary);
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--color-primary-dark);
  }

  strong {
    color: var(--color-text);
    font-weight: 600;
  }

  em {
    color: var(--color-text);
    font-style: italic;
  }

  section {
    padding: 5rem 0;
  }

  .why-entitle {
    background: var(--color-bg);
    position: relative;
  }

  .why-entitle::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
    height: 100%;
    background: linear-gradient(90deg, transparent 0%, rgba(59, 130, 246, 0.02) 100%);
    pointer-events: none;
  }

  .how-it-works {
    background: linear-gradient(135deg, #fafcff 0%, #f8fafc 100%);
    position: relative;
  }

  .how-it-works::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%233b82f6' fill-opacity='0.02' fill-rule='evenodd'/%3E%3C/svg%3E");
    opacity: 0.4;
    pointer-events: none;
  }

  .trust {
    background: var(--color-bg);
    position: relative;
  }

  .trust::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50%;
    background: linear-gradient(180deg, transparent 0%, rgba(59, 130, 246, 0.03) 100%);
    pointer-events: none;
  }

  .what-not {
    background: var(--color-bg-secondary);
  }

  .what-not-section {
    background: linear-gradient(135deg, #faf5ff 0%, #f3e8ff 100%);
    position: relative;
  }

  .what-not-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-border), transparent);
  }

  .what-not-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .what-not-item {
    background: white;
    border-radius: var(--radius-xl);
    border: 1px solid rgba(139, 92, 246, 0.1);
    box-shadow: 0 4px 6px -1px rgba(139, 92, 246, 0.1);
    transition: all 0.3s ease;
    overflow: hidden;
    position: relative;
  }

  .what-not-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-accent) 0%, var(--color-primary) 100%);
  }

  .what-not-icon {
    width: 100%;
    height: 160px;
    overflow: hidden;
    border-radius: var(--radius-lg) var(--radius-lg) 0 0;
    margin: -1px -1px 0 -1px;
  }

  .what-not-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .what-not-item:hover .what-not-icon img {
    transform: scale(1.05);
  }

  .what-not-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(139, 92, 246, 0.15);
    border-color: rgba(139, 92, 246, 0.2);
  }

  .what-not-content {
    padding: 2rem;
  }

  .what-not-content h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .what-not-content p {
    margin-bottom: 0;
    line-height: 1.7;
    color: var(--color-text-secondary);
  }

  .final-cta {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: white;
    text-align: center;
  }

  .final-cta h2 {
    color: white;
  }

  .final-cta p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.25rem;
  }

  .hero {
    padding: 7rem 0 8rem;
    text-align: center;
    background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    left: 50%;
    transform: translateX(-50%);
    width: 150%;
    height: 150%;
    background-image: 
      radial-gradient(circle at 30% 20%, rgba(59, 130, 246, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 70% 60%, rgba(139, 92, 246, 0.12) 0%, transparent 50%);
    pointer-events: none;
    animation: heroGradient 15s ease-in-out infinite;
  }

  @keyframes heroGradient {
    0%, 100% {
      transform: translateX(-50%) translateY(0) scale(1);
    }
    50% {
      transform: translateX(-50%) translateY(-5%) scale(1.05);
    }
  }

  .hero .container {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-content {
    text-align: left;
  }

  .hero-image {
    position: relative;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-xl);
  }

  .hero h1 {
    font-size: 4rem;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, var(--color-text) 0%, var(--color-text-secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero .subheading, .hero .lead {
    font-size: 1.375rem;
    color: var(--color-text-secondary);
    max-width: 850px;
    margin: 0 0 2.5rem;
    line-height: 1.7;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: flex-start;
    flex-wrap: wrap;
  }

  .docs-hero, .security-hero {
    padding: 5rem 0;
    background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
    border-bottom: 1px solid var(--color-border-light);
  }

  .docs-hero-grid, .security-hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .docs-hero-content, .security-hero-content {
    text-align: left;
  }

  .docs-hero h1, .security-hero h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
  }

  .docs-hero .lead, .security-hero .lead {
    font-size: 1.375rem;
    color: var(--color-text-secondary);
    max-width: 700px;
    margin-bottom: 2rem;
  }

  .docs-hero-image img, .security-hero-image img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
  }

  .docs-quick-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 2rem;
  }

  .quick-link {
    padding: 0.75rem 1.25rem;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    color: var(--color-text);
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .quick-link:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .security-badges {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 2rem;
  }

  .security-badge {
    padding: 0.75rem 1.25rem;
    background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
    color: #166534;
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: 0.875rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: flex-start;
    flex-wrap: wrap;
  }

  .trust-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
  }

  .trust-image img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
  }

  .trust-point {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: white;
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border-light);
    overflow: hidden;
  }

  .trust-point-icon {
    width: 100%;
    height: 120px;
    margin-bottom: 1rem;
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  .trust-point-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .trust-point h4 {
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .trust-point p {
    margin-bottom: 0;
  }

  .feature-highlight {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: center;
    margin: 2rem 0;
  }

  .feature-highlight-image img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
  }

  .data-handling-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 2rem;
  }

  .data-card {
    background: white;
    border-radius: var(--radius-xl);
    overflow: hidden;
    border: 1px solid var(--color-border-light);
    box-shadow: var(--shadow-sm);
  }

  .data-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .data-card h3 {
    padding: 1.5rem 1.5rem 0;
  }

  .data-card ul {
    padding: 0 1.5rem 1.5rem 2.5rem;
    margin: 1rem 0 0;
  }

  .data-card li {
    color: var(--color-text-secondary);
    margin-bottom: 0.5rem;
  }

  .not-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .not-item {
    padding: 2rem;
    background: white;
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border-light);
    text-align: center;
  }

  .not-icon {
    font-size: 2rem;
    display: block;
    margin-bottom: 1rem;
  }

  .not-item h4 {
    margin-bottom: 0.75rem;
  }

  .not-item p {
    margin-bottom: 0;
    font-size: 0.9375rem;
  }

  .what-not-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .use-cases {
    background: linear-gradient(180deg, #fafcff 0%, #ffffff 100%);
    position: relative;
  }

  .use-cases::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(circle at 10% 20%, rgba(59, 130, 246, 0.03) 0%, transparent 50%),
      radial-gradient(circle at 90% 80%, rgba(139, 92, 246, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }

  .use-case-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .use-case {
    background: white;
    border-radius: var(--radius-xl);
    overflow: hidden;
    border: 1px solid var(--color-border-light);
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
  }

  .use-case:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-xl);
  }

  .use-case img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .use-case-content {
    padding: 2rem;
  }

  .use-case-content h3 {
    margin-bottom: 0.75rem;
    font-size: 1.25rem;
  }

  .use-case-content p {
    margin-bottom: 0;
    color: var(--color-text-secondary);
  }

  .alpha-hero {
    padding: 5rem 0;
    background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
    border-bottom: 1px solid var(--color-border-light);
  }

  .alpha-hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .alpha-hero-content {
    text-align: left;
  }

  .alpha-hero h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
  }

  .alpha-hero .lead {
    font-size: 1.375rem;
    color: var(--color-text-secondary);
    margin-bottom: 0;
  }

  .alpha-hero-image img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
  }

  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    border-radius: var(--radius-lg);
    text-decoration: none;
    font-weight: 600;
    font-size: 1.0625rem;
    transition: all 0.2s ease;
    box-shadow: var(--shadow-sm);
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: white;
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, var(--color-primary-dark) 0%, #1d4ed8 100%);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    color: white;
  }

  .btn-secondary {
    background: white;
    color: var(--color-text);
    border: 2px solid var(--color-border);
  }

  .btn-secondary:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    border-radius: var(--radius-lg);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 1px solid var(--color-border-light);
    margin-bottom: 1rem;
  }

  .badge-primary {
    background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
    color: var(--color-primary-dark);
    border-color: #bfdbfe;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    margin-bottom: 1rem;
    border-bottom: none;
  }

  .section-intro {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 800px;
    margin: 0 auto 3rem;
    text-align: center;
  }

  .features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .feature {
    padding: 2.5rem;
    background: white;
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-border-light);
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
  }

  .feature:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary-light);
  }

  .feature-icon {
