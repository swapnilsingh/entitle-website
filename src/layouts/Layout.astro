---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Entitle - Externalize Entitlement Logic for Your SaaS' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav>
      <div class="container">
        <a href="/" class="logo">Entitle</a>
        <ul>
          <li><a href="/">Product</a></li>
          <li><a href="/docs">Docs</a></li>
          <li><a href="/security">Security</a></li>
          <li><a href="/alpha" class="cta">Request Alpha Access</a></li>
        </ul>
      </div>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <div class="container">
        <p>&copy; {new Date().getFullYear()} Entitle. Policy decisions for modern SaaS.</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #2563eb;
    --color-text: #1f2937;
    --color-text-secondary: #6b7280;
    --color-bg: #ffffff;
    --color-border: #e5e7eb;
    --color-muted: #f9fafb;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Inter', sans-serif;
    line-height: 1.6;
    color: var(--color-text);
    background: var(--color-bg);
    font-size: 16px;
  }

  h1, h2, h3, h4, h5, h6 {
    line-height: 1.2;
    font-weight: 600;
    color: var(--color-text);
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 1.25rem;
  }

  h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  p {
    margin-bottom: 1rem;
  }

  a {
    color: var(--color-primary);
  }

  section {
    padding: 4rem 0;
  }

  .hero {
    padding: 5rem 0;
    text-align: center;
    background: linear-gradient(to bottom, #f9fafb, #ffffff);
  }

  .hero h1 {
    font-size: 3rem;
    line-height: 1.15;
    margin-bottom: 1.5rem;
  }

  .hero .subheading {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    max-width: 800px;
    margin: 0 auto 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 1.75rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s;
  }

  .btn-primary {
    background: var(--color-primary);
    color: white;
  }

  .btn-primary:hover {
    background: #1d4ed8;
    transform: translateY(-1px);
  }

  .btn-secondary {
    background: white;
    color: var(--color-text);
    border: 1px solid var(--color-border);
  }

  .btn-secondary:hover {
    border-color: var(--color-text-secondary);
  }

  .section-intro {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 800px;
    margin: 0 auto 3rem;
    text-align: center;
  }

  .features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .feature {
    padding: 2rem;
    background: var(--color-muted);
    border-radius: 12px;
    border: 1px solid var(--color-border);
  }

  .feature h3 {
    margin-bottom: 0.75rem;
  }

  .feature p {
    color: var(--color-text-secondary);
    margin-bottom: 0;
  }

  .steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .step {
    position: relative;
    padding-left: 3rem;
  }

  .step-number {
    position: absolute;
    left: 0;
    top: 0;
    width: 2rem;
    height: 2rem;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.875rem;
  }

  .step h3 {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
  }

  .step p {
    color: var(--color-text-secondary);
    margin-bottom: 0;
  }

  code {
    background: var(--color-muted);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: 'Monaco', 'Courier New', monospace;
  }

  pre {
    background: #1f2937;
    color: #f9fafb;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  pre code {
    background: transparent;
    padding: 0;
    color: inherit;
  }

  ul, ol {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  th, td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }

  th {
    background: var(--color-muted);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .hero .subheading {
      font-size: 1.125rem;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.75rem;
    }

    section {
      padding: 3rem 0;
    }

    .features, .steps {
      grid-template-columns: 1fr;
    }
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  nav {
    background: white;
    border-bottom: 1px solid var(--color-border);
    padding: 1.25rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  nav .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  nav .logo {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    text-decoration: none;
    letter-spacing: -0.02em;
  }

  nav ul {
    display: flex;
    list-style: none;
    gap: 2rem;
    align-items: center;
  }

  nav a {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.15s;
    font-size: 0.9375rem;
    font-weight: 500;
  }

  nav a:hover {
    color: var(--color-text);
  }

  nav a.cta {
    background: var(--color-primary);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 600;
  }

  nav a.cta:hover {
    background: #1d4ed8;
    color: white;
  }

  main {
    min-height: calc(100vh - 200px);
  }

  footer {
    background: var(--color-muted);
    border-top: 1px solid var(--color-border);
    padding: 2.5rem 0;
    margin-top: 6rem;
    text-align: center;
  }

  footer p {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    nav ul {
      gap: 1rem;
      font-size: 0.875rem;
    }

    nav a.cta {
      padding: 0.4rem 0.8rem;
      font-size: 0.875rem;
    }
  }
</style>
